<html>
  <head>
    <title>Sudoku Game</title>
    <!-- link to the CSS stylesheet -->
    <link rel="stylesheet" href="/stylesheets/application.css" type="text/css">
  </head>
  <body>
    <h1>There's always time for another game of Sudoku!</h1>
      <div id="flash">
      <%= flash[:notice] %>
      </div>
    <div id="sudoku">
      <form action="/" method="post">
        <!-- one div for each row -->
        <% 3.times do |row| %>
        <!-- we want to create separate div elements for boxes to style them using CSS -->
        <div class="row">
          <% 3.times do |box| %>
          <div class="box">
            <!-- each box will have nine cells -->
            <% 3.times do |cell_row| %>
            <div class="cell-row">
              <% 3.times do |cell| %>
                <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
              <% end %>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
        <% end %>
        <button>Check Solution</button>
      </form>
      <form action="/change_difficulty" method="get">
        <input type="submit" value="Easy" name="5">Easy</input>
        <input type="submit" value="Medium" name="3">Medium</input>
        <input type="submit" value="Hard" name="2">Hard</input>
      </form>
    </div>
  </body>
</html>