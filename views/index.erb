<html>
  <head>
    <title>Sudoku Game</title>
    <!-- link to the CSS stylesheet -->
    <link rel="stylesheet" href="/stylesheets/application.css" type="text/css">
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script>
      $(document).ready(function () {
        $('body').css('background-color: #000')
      });
    </script>
  </head>
  <body>
    <h1>There's always time for another game of Sudoku!</h1>
    <div id="flash">
      <%= flash[:notice] %>
    </div>
    <div id="sudoku">
      <form action="/" method="post">
        <!-- one div for each row -->
        <% 3.times do |row| %>
        <!-- we want to create separate div elements for boxes to style them using CSS -->
        <div class="row">
          <% 3.times do |box| %>
          <div class="box">
            <!-- each box will have nine cells -->
            <% 3.times do |cell_row| %>
            <div class="cell-row">
              <% 3.times do |cell| %>
              <%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell} %>
              <% end %>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
        <% end %>
        <button>Check Solution</button>
      </form>
      
      <form action="/retrieve" method="post">
        <button>Retrieve</button>
      </form>
      <form action="/solution" method="get">
        <button>Solution</button>
      </form>
      <form action="/reset" method="post">
        <button>Reset</button>
      </form>
      <form action="http://en.wikipedia.org/wiki/Sudoku">
        <input type="submit" value="Sudoku Rules"></form>
        <form action="/change_difficulty" method="get">
          <button name="level" value="5" type="submit">Easy</button>
          <button name="level" value="3" type="submit">Medium</button>
          <button name="level" value="2" type="submit">Hard</button>
        </form>
      </form>
    </div>
  </body>
</html>